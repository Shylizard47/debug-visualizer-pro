{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "Install Node.js Dependencies",
            "command": "npm",
            "args": ["install"],
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": []
        },
        {
            "type": "typescript",
            "tsconfig": "tsconfig.json",
            "option": "watch",
            "problemMatcher": [
                "$tsc-watch"
            ],
            "group": "build",
            "label": "tsc: watch - tsconfig.json"
        },
        {
            "type": "typescript",
            "tsconfig": "tsconfig.json",
            "problemMatcher": [
                "$tsc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "label": "tsc: build - tsconfig.json"
        },
        {
            "type": "shell",
            "label": "Compile Extension (npm)",
            "command": "npm",
            "args": ["run", "compile"],
            "group": "build",
            "presentation": {
                "reveal": "silent",
                "panel": "shared"
            },
            "problemMatcher": [
                "$tsc"
            ]
        },
        {
            "type": "shell",
            "label": "Ready to Run (No Build Required)",
            "command": "echo",
            "args": ["Extension is ready! Use F5 to run or the 'Run Extension (No Build)' launch configuration."],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": []
        },
        {
            "type": "shell",
            "label": "Watch Extension",
            "command": "npm",
            "args": ["run", "watch"],
            "group": "build",
            "presentation": {
                "reveal": "never",
                "panel": "dedicated"
            },
            "isBackground": true,
            "problemMatcher": [
                {
                    "owner": "typescript",
                    "source": "ts",
                    "applyTo": "closedDocuments",
                    "fileLocation": [
                        "relative",
                        "${workspaceRoot}"
                    ],
                    "pattern": "$tsc",
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": {
                            "regexp": "(.*?)"
                        },
                        "endsPattern": {
                            "regexp": "Found \\d+ errors?\\. Watching for file changes\\."
                        }
                    }
                }
            ]
        },
        {
            "type": "shell",
            "label": "Package Extension",
            "command": "npm",
            "args": ["run", "package"],
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": []
        }
    ]
}