{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "build-cpp-test",
            "command": "g++",
            "args": [
                "-g",
                "-o",
                "main.exe",
                "main.cpp"
            ],
            "options": {
                "cwd": "${workspaceFolder}/test"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": ["$gcc"]
        },
        {
            "type": "shell",
            "label": "build-cpp-test-msvc",
            "command": "cl",
            "args": [
                "/Zi",
                "/EHsc",
                "/Fe:main.exe",
                "main.cpp"
            ],
            "options": {
                "cwd": "${workspaceFolder}/test"
            },
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": ["$msCompile"]
        }
    ]
}